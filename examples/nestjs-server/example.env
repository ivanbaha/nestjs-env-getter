PORT=3000

# Basic variables
TEST_CONFIG_NUMBER=123 # comment after ENV
TEST_CONFIG_STRING=Hello
TEST_CONFIG_BOOLEAN=true

# Quoting examples
SINGLE_QUOTED_VAL='This is a "literal" value with # no comments'
DOUBLE_QUOTED_VAL="Line one\nLine two\tTabbed\nEscaped \"quote\""

# Multiline example (RSA-like)
PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
MIIEpAIBAAKCAQEA75B6...
...more data...
-----END RSA PRIVATE KEY-----
"

# Interpolation examples
APP_NAME=ExampleApp
APP_TITLE="Welcome to ${APP_NAME}"
BASE_URL=http://localhost:${PORT}

# Export prefix example
export DATABASE_URL="postgres://user:pass@localhost:5432/db"

# Empty value
EMPTY_VAL=

# Array example
ALLOWED_DOMAINS='["google.com", "github.com", "microsoft.com"]'

# Multiline Object example
COMPLEX_CONFIG="{
  \"featureEnabled\": true,
  \"maxUsers\": 100,
  \"apiEndpoint\": \"https://api.example.com\",
  \"retryConfig\": {
    \"count\": 3,
    \"interval\": 500
  }
}"

# Multiline Object example (single-quoted, no escapes needed)
SIMPLE_CONFIG='{
  "name": "MyApp",
  "version": 123,
  "enabled": true
}'

# Cron schedule examples
# 5-field format: minute hour day-of-month month day-of-week
BACKUP_SCHEDULE="0 2 * * *"  # Runs at 2:00 AM daily
# Optional: 6-field format with seconds: second minute hour day-of-month month day-of-week
CLEANUP_SCHEDULE="0 */15 * * * *"  # Runs every 15 minutes
